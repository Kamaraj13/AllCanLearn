        async function generateNewEpisode() {
            const btn = document.getElementById('generate-btn');
            const text = document.getElementById('generate-text');
            const topic = document.getElementById('topic-selector').value;
            
            btn.disabled = true;
            const originalText = text.textContent;
            text.textContent = '‚è≥ Generating...';
            
            try {
                const response = await fetch(`/generate?tts=true&topic=${topic}`, { method: 'POST' });
                if (response.ok) {
                    await new Promise(r => setTimeout(r, 2000));
                    text.textContent = '‚úÖ Complete!';
                    await loadEpisodes();
                    showPage('home');
                    setTimeout(() => {
                        text.textContent = originalText;
                        btn.disabled = false;
                    }, 2000);
                } else {
                    throw new Error('Generation failed');
                }
            } catch (error) {
                console.error('Error:', error);
                text.textContent = '‚ùå Error';
                btn.disabled = false;
                setTimeout(() => {
                    text.textContent = originalText;
                }, 3000);
            }
        }
        
        // ===== PONG GAME =====
        let pongGame = null;
        
        class PongGame {
            constructor(canvas) {
                this.canvas = canvas;
                this.ctx = canvas.getContext('2d');
                this.width = canvas.width;
                this.height = canvas.height;
                
                this.ball = {
                    x: this.width / 2,
                    y: this.height / 2,
                    radius: 10,
                    speedX: 2.5,
                    speedY: 2.5,
                    maxSpeed: 4
                };
                
                this.paddle1 = {
                    x: 20,
                    y: this.height / 2 - 50,
                    width: 18,
                    height: 100,
                    speed: 6,
                    dy: 0
                };
                
                this.paddle2 = {
                    x: this.width - 38,
                    y: this.height / 2 - 50,
                    width: 18,
                    height: 100,
                    speed: 6,
                    dy: 0
                };
                
                this.score1 = 0;
                this.score2 = 0;
                this.keys = {};
                
                this.setupInput();
                this.gameLoop();
            }
            
            setupInput() {
                document.addEventListener('keydown', (e) => {
                    this.keys[e.key] = true;
                });
                document.addEventListener('keyup', (e) => {
                    this.keys[e.key] = false;
                });
            }
            
            update() {
                // Move paddles
                if (this.keys['w'] || this.keys['W']) {
                    this.paddle1.y = Math.max(0, this.paddle1.y - this.paddle1.speed);
                }
                if (this.keys['s'] || this.keys['S']) {
                    this.paddle1.y = Math.min(this.height - this.paddle1.height, this.paddle1.y + this.paddle1.speed);
                }
                if (this.keys['ArrowUp']) {
                    this.paddle2.y = Math.max(0, this.paddle2.y - this.paddle2.speed);
                }
                if (this.keys['ArrowDown']) {
                    this.paddle2.y = Math.min(this.height - this.paddle2.height, this.paddle2.y + this.paddle2.speed);
                }
                
                // Move ball
                this.ball.x += this.ball.speedX;
                this.ball.y += this.ball.speedY;
                
                // Ball collision with top/bottom
                if (this.ball.y - this.ball.radius < 0 || this.ball.y + this.ball.radius > this.height) {
                    this.ball.speedY = -this.ball.speedY;
                    this.ball.y = Math.max(this.ball.radius, Math.min(this.height - this.ball.radius, this.ball.y));
                }
                
                // Ball collision with paddles
                if (this.ball.x - this.ball.radius < this.paddle1.x + this.paddle1.width &&
                    this.ball.y > this.paddle1.y &&
                    this.ball.y < this.paddle1.y + this.paddle1.height) {
                    this.ball.speedX = Math.abs(this.ball.speedX);
                    this.ball.x = this.paddle1.x + this.paddle1.width + this.ball.radius;
                }
                
                if (this.ball.x + this.ball.radius > this.paddle2.x &&
                    this.ball.y > this.paddle2.y &&
                    this.ball.y < this.paddle2.y + this.paddle2.height) {
                    this.ball.speedX = -Math.abs(this.ball.speedX);
                    this.ball.x = this.paddle2.x - this.ball.radius;
                }
                
                // Score
                if (this.ball.x < 0) {
                    this.score2++;
                    this.resetBall();
                }
                if (this.ball.x > this.width) {
                    this.score1++;
                    this.resetBall();
                }
                
                this.updateScore();
            }
            
            resetBall() {
                this.ball.x = this.width / 2;
                this.ball.y = this.height / 2;
                this.ball.speedX = (Math.random() > 0.5 ? 1 : -1) * 2.5;
                this.ball.speedY = (Math.random() - 0.5) * 2.5;
            }
            
            draw() {
                // Clear canvas
                this.ctx.fillStyle = 'rgba(26, 31, 58, 0.3)';
                this.ctx.fillRect(0, 0, this.width, this.height);
                
                // Draw center line
                this.ctx.strokeStyle = 'rgba(14, 165, 233, 0.2)';
                this.ctx.setLineDash([10, 10]);
                this.ctx.beginPath();
                this.ctx.moveTo(this.width / 2, 0);
                this.ctx.lineTo(this.width / 2, this.height);
                this.ctx.stroke();
                this.ctx.setLineDash([]);
                
                // Draw tennis rackets (paddles)
                // Left racket
                this.drawTennisRacket(this.paddle1.x + 5, this.paddle1.y, true);
                // Right racket
                this.drawTennisRacket(this.paddle2.x + 5, this.paddle2.y, false);
                
                // Draw tennis ball
                this.drawTennisBall(this.ball.x, this.ball.y, this.ball.radius);
            }
            
            drawTennisRacket(x, y, isLeft) {
                // Racket handle (brown wood color)
                this.ctx.fillStyle = '#8B4513';
                this.ctx.fillRect(x - 2, y + 80, 8, 30);
                
                // Racket grip
                this.ctx.strokeStyle = '#D2B48C';
                this.ctx.lineWidth = 2;
                for (let i = 0; i < 4; i++) {
                    this.ctx.beginPath();
                    this.ctx.moveTo(x - 2, y + 85 + i * 7);
                    this.ctx.lineTo(x + 6, y + 85 + i * 7);
                    this.ctx.stroke();
                }
                
                // Racket head (string area) - oval
                this.ctx.fillStyle = '#FFE4B5';
                this.ctx.beginPath();
                this.ctx.ellipse(x + 2, y + 30, 15, 35, 0, 0, Math.PI * 2);
                this.ctx.fill();
                
                // String pattern
                this.ctx.strokeStyle = 'rgba(139, 69, 19, 0.3)';
                this.ctx.lineWidth = 1;
                for (let i = -3; i <= 3; i++) {
                    this.ctx.beginPath();
                    this.ctx.moveTo(x + 2 + i * 3, y - 5);
                    this.ctx.lineTo(x + 2 + i * 3, y + 65);
                    this.ctx.stroke();
                }
                for (let i = -8; i <= 8; i++) {
                    this.ctx.beginPath();
                    this.ctx.moveTo(x - 13, y + 30 + i * 3);
                    this.ctx.lineTo(x + 17, y + 30 + i * 3);
                    this.ctx.stroke();
                }
                
                // Racket frame
                this.ctx.strokeStyle = '#333333';
                this.ctx.lineWidth = 2;
                this.ctx.beginPath();
                this.ctx.ellipse(x + 2, y + 30, 15, 35, 0, 0, Math.PI * 2);
                this.ctx.stroke();
            }
            
            drawTennisBall(x, y, radius) {
                // Main yellow-green ball
                const gradient = this.ctx.createRadialGradient(x - 3, y - 3, 0, x, y, radius);
                gradient.addColorStop(0, '#FFFF00');
                gradient.addColorStop(1, '#ADFF2F');
                this.ctx.fillStyle = gradient;
                this.ctx.beginPath();
                this.ctx.arc(x, y, radius, 0, Math.PI * 2);
                this.ctx.fill();
                
                // Ball shadow/shine
                this.ctx.strokeStyle = 'rgba(255, 255, 255, 0.4)';
                this.ctx.lineWidth = 2;
                this.ctx.beginPath();
                this.ctx.arc(x - 3, y - 3, radius - 2, 0, Math.PI * 2);
                this.ctx.stroke();
                
                // Tennis ball seams (curved lines)
                this.ctx.strokeStyle = '#FFFFFF';
                this.ctx.lineWidth = 1.5;
                
                // Curved seam 1
                this.ctx.beginPath();
                this.ctx.arc(x, y, radius - 2, Math.PI * 0.15, Math.PI * 0.4);
                this.ctx.stroke();
                
                // Curved seam 2
                this.ctx.beginPath();
                this.ctx.arc(x, y, radius - 2, Math.PI * 1.6, Math.PI * 1.85);
                this.ctx.stroke();
            }
            
            updateScore() {
                document.getElementById('score-display').textContent = `Player 1: ${this.score1} | Player 2: ${this.score2}`;
            }
            
            gameLoop() {
                this.update();
                this.draw();
                requestAnimationFrame(() => this.gameLoop());
            }
        }
        
        // Initialize Pong when page loads
        function initPong() {
            const canvas = document.getElementById('pongCanvas');
            if (canvas && !pongGame) {
                pongGame = new PongGame(canvas);
            }
        }
        
        // Update showPage to initialize Pong when switching to pong page
        const originalShowPage = showPage;
        showPage = function(pageId) {
            originalShowPage(pageId);
            if (pageId === 'pong') {
                setTimeout(initPong, 100);
            }
        };
        
        window.addEventListener('load', loadEpisodes);
        updateTopicDescription();
    </script>
