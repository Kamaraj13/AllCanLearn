            const html = episodes.map((ep, idx) => {
                const date = new Date(ep.created_at);
                let icon = 'üèõÔ∏è';
                if (ep.topic.includes('Travel')) icon = '‚úàÔ∏è';
                else if (ep.topic.includes('Tech Startup') || ep.topic.includes('Entrepreneurship')) icon = 'üíª';
                else if (ep.topic.includes('Personal Finance') || ep.topic.includes('Wealth')) icon = 'üí∞';
                else if (ep.topic.includes('Mental Health') || ep.topic.includes('Wellness')) icon = 'üß†';
